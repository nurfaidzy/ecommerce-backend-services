{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/ecommerce-backend-services/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/ecommerce-backend-services/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/ecommerce-backend-services",
  "projects": {
    "category-service": {
      "type": "application",
      "root": "apps/category-service",
      "entryFile": "main",
      "sourceRoot": "apps/category-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/category-service/tsconfig.app.json"
      }
    },
    "ecommerce-backend-services": {
      "type": "application",
      "root": "apps/ecommerce-backend-services",
      "entryFile": "main",
      "sourceRoot": "apps/ecommerce-backend-services/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ecommerce-backend-services/tsconfig.app.json"
      }
    },
    "item-service": {
      "type": "application",
      "root": "apps/item-service",
      "entryFile": "main",
      "sourceRoot": "apps/item-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/item-service/tsconfig.app.json"
      }
    }
  }
}